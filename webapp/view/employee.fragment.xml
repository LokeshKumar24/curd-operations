	<Dialog   title="Select Product">
	
				<form:SimpleForm  >
							<form:content>
							<Label text="EmployeeId" ></Label>
							<Input value="{empModel>/id}"></Input>
								<Label text="EmployeeName" ></Label>
							<Input value="{empModel>/empName}"></Input>
								<Label text="EmployeeDesgination" ></Label>
							<Input value="{empModel>/empDesignation}"></Input>
					    	<Label/>
							<Button text="Submit" type="Accept" press="onSubmit"></Button>
